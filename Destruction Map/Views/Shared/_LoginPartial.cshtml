@using Microsoft.AspNetCore.Identity
@using Destruction_Map.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    <!--
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login"><img width="40px" src="Url.Content("~/Images/loginImage.png")"/></a>
            </li>
    -->
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><img width="40px" src="@Url.Content("~/Images/loginImage.png")"/></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Map", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><img width="40px" src="@Url.Content("~/Images/loginImage.png")"/></a>
        </li>
    }
</ul>



